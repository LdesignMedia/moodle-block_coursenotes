<div class="course-notes-block">
    <h2>{{#title}} {{title}} {{/title}}</h2>
    <div class="content">
        {{#coursenote}}
            <div id="coursenote-display">{{coursenote}}</div>
            <a href="javascript:void(0);" class="edit-icon" id="edit-icon">✏️</a>
        {{/coursenote}}
    </div>
        <form method="post" action="" id="coursenote-form">
            <label>
                <textarea name="coursenote" rows="4" cols="50" id="coursenote-textarea" data-blockinstanceid="{{blockinstanceid}}" data-courseid="{{courseid}}">{{coursenote}}</textarea>
            </label>
            <input type="submit" value="{{#savebutton}} {{savebutton}} {{/savebutton}}">
            <button type="button" id="cancel-button">Cancel</button>
        </form>
</div>
